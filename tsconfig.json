  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "compilerOptions": {
    "lib": ["ES2022"],
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true
